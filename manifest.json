{
  "manifest_version": 3,
  "name": "TypiPat",
  "version": "1.0",
  "description": "Orchestrate your day into harmony. Your quiet rhythm â€” composing peace with every keystroke.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "iPat.png",
    "48": "iPat.png",
    "128": "iPat.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "iPat.png",
      "48": "iPat.png",
      "128": "iPat.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils.js",
        "storage-helper.js",
        "content.js"
      ]
    }
  ]
}