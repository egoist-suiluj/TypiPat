{
    "manifest_version": 3,
    "name": "TypiPat",
    "version": "1.0",
    "description": "Orchestrate your day into harmony. Your quiet rhythm â€” composing peace with every keystroke.",
    "privacy_policy_url": "https://egoist-suiluj.github.io/TypiPat/PRIVACY.html",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "iPat.png",
        "48": "iPat.png",
        "128": "iPat.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "iPat.png",
            "48": "iPat.png",
            "128": "iPat.png"
        }
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*",
                "*://*.gmail.com/*",
                "*://outlook.live.com/*",
                "*://outlook.office.com/*",
                "*://*.facebook.com/*",
                "*://*.twitter.com/*",
                "*://*.linkedin.com/*",
                "*://*.reddit.com/*",
                "*://docs.google.com/*",
                "*://drive.google.com/*",
                "*://*.notion.so/*",
                "*://*.slack.com/*",
                "*://*.discord.com/*",
                "*://*.trello.com/*",
                "*://*.asana.com/*",
                "*://*.github.com/*",
                "*://*.gitlab.com/*",
                "*://*.stackoverflow.com/*",
                "*://*.wikipedia.org/*",
                "*://*.medium.com/*"
            ],
            "js": [
                "utils.js",
                "storage-helper.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}